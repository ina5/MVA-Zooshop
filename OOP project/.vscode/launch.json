{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "ts-node",
      "args": ["${workspaceFolder}\\src\\main.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "jasmine-ts tests",
      "program": "${workspaceFolder}/node_modules/jasmine-ts/lib/index.js",
      "args": [
        "./spec/**/*.spec.ts",
      ],
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "outputCapture": "std"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach Karma Chrome",
      "address": "localhost",
      "port": 9333,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "pathMapping": {
        "/": "${workspaceRoot}",
        "/base/": "${workspaceRoot}"
      }
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9001",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "trace": true,
      "pathMapping": {
        "/": "${workspaceRoot}",
        "/base/": "${workspaceRoot}"
      }
    }
  ]
}
